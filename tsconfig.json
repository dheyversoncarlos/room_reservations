{
  "compilerOptions": {
    "target": "es2017",    
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true, 
    "module": "commonjs",   
    "baseUrl": "./src",  
    "paths": {
      "@modules/*": ["modules/*"],
      "@shared/*": ["shared/*"],
      "@utils": ["utils/index.ts"],
    },                         
    "resolveJsonModule": true, 
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true, 
    "skipLibCheck": true 
  }
}
